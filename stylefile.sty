\definecolor{Dunkelblau}{RGB}{14, 3, 46} 	% Farbeinstellung für die Überschriften	
\definecolor{Schwarz}{RGB}{0,0,0}       	% Farbeinstellung für die Kapitel-Linien
\areaset[0cm]{17cm}{24cm}                	% Textbreite: 15 cm, Texthöhe: 24 cm, Rand: 2 cm

% Definiere den Seitenstil
\pagestyle{scrheadings}
\clearpairofpagestyles
\ihead{\headmark}
\ohead{\pagemark}
\setheadsepline{.2pt}

\setmainfont{Times New Roman}                   	% Setzt die globale Schriftart auf Times New Roman
\addtokomafont{disposition}{\color{Dunkelblau}} 	% Verändert alle Kapitelüberschriften
\renewcommand{\thechapter}{\Roman{chapter}}	% Kapitel werden römisch nummeriert (Physical Review Letters)
\renewcommand{\thesection}{\arabic{section}}	% Abschnitte werden Arabisch nummeriert (Physical Review Letters)
\addtokomafont{chapterentry}{\normalcolor}     	% Lässt die Farbe aller Einträge schwarz

% Anpassung der Kapitelüberschrift
\renewcommand*{\chapterformat}{
	\centering
	\chapapp~\thechapter
}

\renewcommand*{\chapterlinesformat}[3]{
	\centering
	#2
	
\noindent	\textbf{#3}
	\vspace{0.15em}
	\rule{\textwidth}{1pt}
}

